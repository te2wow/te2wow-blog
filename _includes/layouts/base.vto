<!DOCTYPE html>
<html lang="ja" data-theme="nord">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} | te2wow</title>
  <link rel="stylesheet" href="{{ "/styles/main.css" |> url }}">
  <script>
    (function() {
      const theme = localStorage.getItem('theme') || 'nord';
      document.documentElement.setAttribute('data-theme', theme);
    })();
  </script>
</head>
<body class="min-h-screen bg-base-200 flex flex-col">
  <!-- ヘッダー -->
  <header class="navbar bg-primary text-primary-content shadow-lg">
    <div class="flex-1">
      <a href="{{ "/" |> url }}" class="btn btn-ghost text-xl font-bold">te2wow</a>
    </div>
    <nav class="flex-none flex items-center gap-2">
      <ul class="menu menu-horizontal px-1 gap-1">
        <li><a href="{{ "/" |> url }}" class="btn btn-ghost btn-sm">Home</a></li>
        <li><a href="{{ "/about/" |> url }}" class="btn btn-ghost btn-sm">About</a></li>
      </ul>
      <button id="theme-toggle" class="btn btn-ghost btn-sm btn-square" aria-label="Toggle theme">
        <svg id="icon-light" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
        <svg id="icon-dark" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>
      </button>
    </nav>
  </header>

  <!-- メインコンテンツ -->
  <main class="container mx-auto px-4 py-8 flex-grow max-w-4xl">
    {{ content }}
  </main>

  <!-- フッター -->
  <footer class="footer footer-center p-6 bg-base-300 text-base-content">
    <aside>
      <p class="font-medium">&copy; 2025 te2wow</p>
    </aside>
  </footer>

  <script>
    const toggle = document.getElementById('theme-toggle');
    const iconLight = document.getElementById('icon-light');
    const iconDark = document.getElementById('icon-dark');

    function updateIcon() {
      const current = document.documentElement.getAttribute('data-theme');
      if (current === 'night') {
        iconLight.classList.remove('hidden');
        iconDark.classList.add('hidden');
      } else {
        iconLight.classList.add('hidden');
        iconDark.classList.remove('hidden');
      }
    }

    updateIcon();

    toggle.addEventListener('click', () => {
      const current = document.documentElement.getAttribute('data-theme');
      const next = current === 'nord' ? 'night' : 'nord';
      document.documentElement.setAttribute('data-theme', next);
      localStorage.setItem('theme', next);
      updateIcon();
    });
  </script>
</body>
</html>
